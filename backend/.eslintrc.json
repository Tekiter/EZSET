{
    "parser": "babel-eslint",
    "plugins": ["import", "promise", "jest", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "jest": true
    },
    "extends": ["airbnb-base"],
    "rules": {
        "jest/no-focused-tests": 2,
        "jest/no-identical-title": 2,
        "linebreak-style": 0,
        "no-console": "error",
        "semi": ["error", "never"],
        "indent": ["error", 4],
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    }
}
